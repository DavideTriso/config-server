{
    "name": "config-server",
    "version": "1.0.0",
    "description": "Simple GraphQL server to store and retrieve non-sensitive configurations and settings on a per-user basis.",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "start": "npm run build && node dist/index.js",
        "dev": "ts-node index.ts",
        "seeder": "ts-node src/cli/seeder.ts",
        "token-manager": "ts-node src/cli/token-manager.ts",
        "test": "jest",
        "clean": "rm -rf dist"
    },
    "bin": {
        "config-server-token": "./dist/src/cli/token-manager.js"
    },
    "keywords": [],
    "author": "Davide Trisolini",
    "license": "MIT",
    "engines": {
        "node": ">=20.19.0"
    },
    "dependencies": {
        "@apollo/server": "^5.4.0",
        "@graphql-tools/schema": "^10.0.31",
        "apollo-server-core": "^3.13.0",
        "bcrypt": "^6.0.0",
        "commander": "^14.0.1",
        "dotenv": "^17.2.3",
        "graphql": "^16.11.0",
        "graphql-type-json": "^0.3.2",
        "mongoose": "^9.1.6",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@faker-js/faker": "^10.3.0",
        "@types/bcrypt": "^6.0.0",
        "@types/jest": "^30.0.0",
        "@types/mongoose": "^5.11.96",
        "@types/node": "^24.10.0",
        "jest": "^30.2.0",
        "mongodb-memory-server": "^9.1.6",
        "ts-jest": "^29.4.5",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3"
    }
}